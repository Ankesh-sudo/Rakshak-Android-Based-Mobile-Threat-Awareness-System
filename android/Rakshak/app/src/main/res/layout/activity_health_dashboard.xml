<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#0D1117"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ================= TITLE ================= -->
        <TextView
            android:text="Phone Health"
            android:textSize="22sp"
            android:textColor="#00FFAA"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- ================= CIRCULAR HEALTH SCORE ================= -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp">

            <ProgressBar
                android:id="@+id/scoreProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="0"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circular_health_progress" />

            <TextView
                android:id="@+id/tvScore"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

        <!-- ================= SCAN BUTTON ================= -->
        <Button
            android:id="@+id/btnScanHealth"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="28dp"
            android:text="Scan Device Health"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#000000"
            android:backgroundTint="#00FFAA"/>

        <!-- ================= DETAILS CARD ================= -->
        <LinearLayout
            android:layout_marginTop="40dp"
            android:background="#161B22"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBattery"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:text="Battery: --"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvTemp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:text="Temperature: --"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvRam"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:text="RAM Used: --"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvStorage"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:text="Storage Used: --"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
