<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#161B22"
    android:layout_marginBottom="14dp"
    android:elevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- File Name -->
    <TextView
        android:id="@+id/tvThreatName"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- File Path -->
    <TextView
        android:id="@+id/tvThreatPath"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- File Size -->
    <TextView
        android:id="@+id/tvThreatSize"
        android:textColor="#BBBBBB"
        android:textSize="13sp"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Threat Reason Badge -->
    <TextView
        android:id="@+id/tvThreatReason"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:padding="6dp"
        android:layout_marginTop="8dp"
        android:background="#B00020"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Action Buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Delete"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D32F2F"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnQuarantine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Quarantine"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#000000"
            android:backgroundTint="#FFA500"/>

    </LinearLayout>

</LinearLayout>
