<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- ================= HEADER ================= -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_tagline"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="32dp" />

        <!-- ================= SECURITY OVERVIEW ================= -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/security_overview"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSecurityDashboard"
            style="@style/Widget.Rakshak.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/security_dashboard"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRiskHistory"
            style="@style/Widget.Rakshak.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/risk_history"
            android:layout_marginBottom="24dp" />

        <!-- ================= CORE PROTECTION ================= -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/core_protection"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCallProtection"
            style="@style/Widget.Rakshak.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/call_protection"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLinkScanner"
            style="@style/Widget.Rakshak.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scan_link"
            android:layout_marginBottom="24dp" />

        <!-- ================= FILE SECURITY ================= -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/file_security"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnScanFile"
            style="@style/Widget.Rakshak.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scan_file"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnScanFolder"
            style="@style/Widget.Rakshak.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scan_folder"
            android:layout_marginBottom="24dp" />

        <!-- ================= INSIGHTS ================= -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/security_insights"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPermissionTracker"
            style="@style/Widget.Rakshak.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_tracker"
            android:layout_marginBottom="24dp" />

        <!-- ================= UTILITIES ================= -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/utilities"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHealthCheck"
            style="@style/Widget.Rakshak.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/health_check"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChatBot"
            style="@style/Widget.Rakshak.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ai_assistant"
            android:layout_marginBottom="16dp" />

        <!-- ðŸ”¥ EMERGENCY BUTTON (Fixes Your Error) -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEmergency"
            style="@style/Widget.Rakshak.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emergency_mode"
            android:backgroundTint="@color/accent_red"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>
