<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/card_dark">

    <!-- ðŸŸ¦ App Icon -->
    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/app_icon_desc" />

    <!-- ðŸ§± App Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- App Name -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- System App Label (Stage 6.1) -->
        <TextView
            android:id="@+id/systemAppLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/system_app_label"
            android:textSize="11sp"
            android:textColor="@color/text_secondary"
            android:visibility="gone"
            android:layout_marginTop="2dp" />

        <!-- Package Name -->
        <TextView
            android:id="@+id/packageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="com.example.app"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

        <!-- Permission Summary -->
        <TextView
            android:id="@+id/permissionSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_dangerous_permissions"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

        <!-- Risk Label -->
        <TextView
            android:id="@+id/riskLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/risk_label"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</LinearLayout>
